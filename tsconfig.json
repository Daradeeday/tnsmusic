{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",                  // ✅ สำคัญ: เปิด JSX
    "types": ["vite/client", "node"],    // ✅ ให้รู้จัก import.meta/env และ Node
    "resolveJsonModule": true,
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "types": [ "vite/client" ],
  "include": ["src"]
}
